<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yinggu.plane.mapper.OrderMapper">
    <resultMap id="BaseResultMap" type="com.yinggu.plane.pojo.Order">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="flight_id" jdbcType="INTEGER" property="flight_id" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="idNumber" jdbcType="VARCHAR" property="idNumber" />
        <result column="phoneNum" jdbcType="VARCHAR" property="phoneNum" />
        <result column="user_id" jdbcType="INTEGER" property="user_id"/>
    </resultMap>


    <select id="selectListById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select *
        from myorder
        where user_id=#{user_id,jdbcType=INTEGER}
    </select>

    <insert id="addOrder" keyColumn="id" keyProperty="id" parameterType="com.yinggu.plane.pojo.Order" useGeneratedKeys="true">
        insert into myorder (flight_id, `name`, idNumber, phoneNum, user_id)
        values (#{flight_id,jdbcType=INTEGER}, #{name,jdbcType=VARCHAR}, #{idNumber,jdbcType=VARCHAR}, #{phoneNum,jdbcType=VARCHAR},#{user_id,jdbcType=INTEGER})
    </insert>

</mapper>